	<script>
	Visualforce.remoting.timeout = 120000;
	var selectedState='';
	$(document).ready(function(){
		var states= ['AL','AK','AZ','AR','CA','CO','CT','DE','DC','FL','GA',
		'HI','ID','IL','IN','IA','KS','KY','LA','ME','MD','MA',
		'MI','MN','MS','MO','MT','NE','NV','NH','NJ','NM','NY','NC','ND',
		'OH','OK','OR','PA','RI','SC','SD','TN','TX','UT',
		'VT','VA','WA','WV','WI','WY'
	];

	$('#stateChoices').append('<a class="dropdown-item" href="#">All States</a>');
	for(var state of states){
		$('#stateChoices').append('<a class="dropdown-item" href="#">'+state+'</a>');
	}

	$('#stateChoices a').click(function(){
		if($(this).text()!='All States') selectedState = $(this).text();
		else selectedState = '';
		$('#stateDropdown').text($(this).text());
	});

	SalesHD_Homepage.getContacts(function(callback, event){
		$("#contacts").html('');
		var contactList = JSON.parse(callback);
		for(contacts of contactList){
			var contact = contacts.Contact__r;
			var title = '';
			if(contact.Title__c) title = ' - '+contact.Title__c;
			var icon = '<i class="fas fa-user contact-blue"></i>';
			if(contacts.Contact__r.RecordType.Name=='HD Physicians') icon = '<i class="fas fa-user-md contact-blue"></i>';
			var link = 'onclick="window.location=\'/apex/SalesHD_Contact?id='+contact.Id+'\'"';
			$("#contacts").append('<li '+link+'><div class="row"><div class="col-md-1" style="font-size:40px;text-align:center;width:100%;">'+
