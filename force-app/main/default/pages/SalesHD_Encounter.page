<script>

$(document).ready(function(){

	var additionalContacts = {!additionalContactsString};
	if(!isEmpty(additionalContacts)){
		$("#additionalContacts").show();
		for(var contactId in additionalContacts){
			$("#additionalContacts p").append('<a style="margin-right:10px;" href="/apex/SalesHD_contact?id='+contactId+'">'+additionalContacts[contactId]+'</a>');
		}
	}
});

function isEmpty(obj) {
    for(var key in obj) {
        if(obj.hasOwnProperty(key))
            return false;
    }
    return true;
}

</script>
