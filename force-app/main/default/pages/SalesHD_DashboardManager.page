<apex:page showHeader="false" lightningStyleSheets="true" standardStylesheets="false" sidebar="false" applyHtmlTag="false"
    applyBodyTag="false" docType="html-5.0" controller="SalesHD_ReportingClass">
    <html xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">

    <head>
        <title>Manager Dashboard</title>
        <style>
            #dashboard-body {
                background-color: #E0E2E7;
            }

            .report-container {
                background-color: #fff;
                border-radius: 7px;
                margin: 10px;
            }

            .col-md-6 {
                padding: 10px !important;
            }

            h2 {
                font-size: 16px !important;
                font-weight: bold !important;
                padding: 10px 0px !important;
            }

            .btn {
                margin: 10px 0px !important;
            }
        </style>
    </head>

    <apex:outputPanel id="dashboard-output">

        <body id="dashboard-body">
            <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
            <div class="slds-scope">
                <apex:form>
                    <div class="row" style="background-color:#007bff; color:#fff;">
                        <div class="col-md-12">
                            <h2 class="text-center ">{!dateRange}</h2>
                        </div>
                        <div class="col-md-3 offset-md-3">
                            <apex:commandButton style="color:#fff;" styleClass="btn btn-secondary btn-block" action="{!previousWeek}" value="Previous Week"></apex:commandButton>
                        </div>
                        <div class="col-md-3">
                            <apex:commandButton style="color:#fff;" styleClass="btn btn-secondary btn-block" action="{!nextWeek}" value="Next Week"></apex:commandButton>
                        </div>
                        <div class="col-md-6 offset-md-3">
                            <apex:selectList size="1" value="{!selectedCL}" style="width:100%;color:black;">
                                <apex:selectOptions value="{!CLPicklist}" />
                                <apex:actionsupport event="onchange" action="{!selectCL}"/>
                            </apex:selectList>
                        </div>
                        <div class="col-md-6 offset-md-3">
                            <apex:selectList size="1" value="{!selectedAccount}" style="width:100%;color:black;">
                                <apex:selectOptions value="{!AccountPicklist}" />
                                <apex:actionsupport event="onchange" action="{!selectAccount}"/>
                            </apex:selectList>
                        </div>
                    </div>
                </apex:form>



            <!-- <apex:outputPanel rendered="{!IF(selectedCL!=null, true, false)}">
                <div class="row">
                    <div class="col-md-12">
                        <div class="report-container">
                            <c:SalesHD_KPI/>
                        </div>
                    </div>
                </div>
            </apex:outputPanel> -->

                <div class="row">
                    <div class="col-md-6">
                        <div class="report-container">
                            <c:SalesHD_CLPerformanceTrend/>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="report-container">
                            <c:SalesHD_EncountersByContact/>
                        </div>

                    </div>

                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="report-container">
                            <c:SalesHD_EncountersByMedium/>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="report-container">
                            <c:SalesHD_EncountersByObjective/>
                        </div>
                    </div>

                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="report-container">
                            <c:SalesHD_EncountersByUnit/>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="report-container">
                            <c:SalesHD_EncountersByAccount/>
                        </div>
                    </div>

                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="report-container">
                            <c:SalesHD_UpcomingEncounters/>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="report-container">
                            <c:SalesHD_EncountersToTarget/>
                        </div>
                    </div>

                </div>

            </div>
        </body>
    </apex:outputPanel>

    </html>


</apex:page>