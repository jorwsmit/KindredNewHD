			function loadPage() {
				$("#spinner").hide();
				SalesHD_Account.getCsuite('{!account.id}', function (callback, event) {
					var data = JSON.parse(callback);
					$("#csuite").html('');
					for (var csuite of data) {
						$("#csuite").append('<li onclick="navToContact(\'' + csuite.Id + '\')"><b>' + csuite.Name + '</b></br>' + csuite.Title__c + '</li>');
