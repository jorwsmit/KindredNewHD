						if (unit.isActive) {
							// $("#units").append('<li onclick="window.location=\'/apex/SalesHD_Unit?id='+unit.Id+'\'"><span class="blue"><b>'+unit.Unit__r.Name+'</b> '+10+' Beds</span></br>'+
